{
  /* <------------ General Settings ------------> */
  "update.mode": "manual",
  "window.restoreWindows": "preserve",
  "window.commandCenter": false,
  "files.autoSave": "afterDelay",
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.minimap.autohide": true,
  "editor.minimap.showSlider": "always",
  "editor.accessibilitySupport": "off",
  "editor.minimap.renderCharacters": false,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.bracketPairs": true,
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.linkedEditing": false,
  // "editor.fontLigatures": true,
  "editor.fontLigatures": "'feat','ures','ss02','ss07','ss08','liga','ss10','ss03','ss13'",
  "editor.stickyScroll.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        // the following elements will be in italic //
        "scope": [
          "comment",
          // "comment.block.html",
          "keyword.control.import.js", // import
          "keyword.control.export.js", // export
          "keyword.control.from.js", // from
          // "constant", // String, Number, Booleanâ€¦, this, super
          "storage.modifier", // static keyword
          "storage.type.class", // class keyword
          "entity.other.attribute-name", // html attributes
          "fenced_code.block.language.markdown", // markdown language modifier
          //-->
          "keyword.control.conditional",
          "meta.object-literal.key",
          "variable.other.readwrite.alias",
          "variable.other.constant",
          "variable.other.object",
          "variable.object.property",
          "variable.other.property",
          "variable.other.object",
          "punctuation.accessor.optional",
          "meta.brace.square",
          "meta.object-binding-pattern-variable",
          "punctuation.definition.binding-pattern.object",
          "punctuation.definition.parameters",
          "punctuation.definition.tag",
          "punctuation.definition.block",
          "punctuation.separator.comma",
          "punctuation.terminator.statement",
          "meta.brace.round",
          "storage.type.function.arrow",
          "constant.language.boolean",
          "keyword.control.trycatch",
          "punctuation.section.embedded",
          "meta.jsx.children",
          "keyword.control.default"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        // the following elements will be displayed in bold
        "scope": [
          "entity.name.function.js",
          "entity.name.type.class" // class names
        ],
        "settings": {
          "fontStyle": "bold"
        }
      },
      {
        // the following elements will be displayed in bold and italic
        "scope": [
          "entity.other.attribute-name.html",
          "storage.type.js",
          "entity.name.section.markdown", // markdown headlines
          "storage.type.function.js"
        ],
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        // the following elements will be excluded from italics
        "scope": [
          //   (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json",
          // "comment.block",
          "entity.other.attribute-name.class.css",
          "comment.line.double-slash.js",
          // -->
          "support.class.component",
          "string.quoted.double",
          "variable.parameter",
          "variable.other.readwrite",
          "entity.name.tag",
          "keyword.control.flow.js"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.fontFamily": "MonoLisa, Fira Code iScript, Lilex, Fira Code, Jetbrains Mono, Operator Mono, Source Code Pro, Consolas, Courier New, Monospace, Cascadia Code",

  /* <------------ Workbench ------------> */
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.list.smoothScrolling": true,
  "workbench.colorTheme": "Winter is Coming (Dark Blue)",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.customLabels.patterns": {
    "**/{layout,page}.jsx": "${dirname} ${filename}",
    "**/{layout,page}.tsx": "${dirname} ${filename}",
    "**/{route}.js": "${dirname} ${filename}",
    "**/{route}.ts": "${dirname} ${filename}"
  },
  "workbench.colorCustomizations": {
    // "sideBar.border": "#ff0000",
    // "tab.activeBackground": "#333842"
    //     // "terminal.background": "#1D2021",
    //     "terminal.foreground": "#A89984",
    //     "terminalCursor.background": "#A89984",
    //     "terminalCursor.foreground": "#A89984",
    //     "terminal.ansiBlack": "#1D2021",
    //     "terminal.ansiBlue": "#0D6678",
    //     "terminal.ansiBrightBlack": "#665C54",
    //     "terminal.ansiBrightBlue": "#0D6678",
    //     "terminal.ansiBrightCyan": "#8BA59B",
    //     "terminal.ansiBrightGreen": "#95C085",
    //     "terminal.ansiBrightMagenta": "#8F4673",
    //     "terminal.ansiBrightRed": "#FB543F",
    //     "terminal.ansiBrightWhite": "#FDF4C1",
    //     "terminal.ansiBrightYellow": "#FAC03B",
    //     "terminal.ansiCyan": "#8BA59B",
    //     "terminal.ansiGreen": "#95C085",
    //     "terminal.ansiMagenta": "#8F4673",
    //     "terminal.ansiRed": "#FB543F",
    //     "terminal.ansiWhite": "#A89984",
    //     "terminal.ansiYellow": "#FAC03B"
  },
  /* <------------ Terminal ------------> */
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.env.windows": {},
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "MonoLisa, Jetbrains Mono, Fira Code, Lilex, Operator Mono, Source Code Pro, Consolas, Courier New, Monospace, Cascadia Code",
  /* <------------ Extensions ------------> */
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,
  "prettier.bracketSameLine": false,
  // "prettier.printWidth": 130,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "liveServer.settings.donotShowInfoMsg": true,
  "tabnine.experimentalAutoImports": true,
  "tabnine.ignore_directories": ["node_modules", "dist", "build"],
  "cSpell.userWords": [
    "ARGB",
    "autohide",
    "bookid",
    "Cascadia",
    "Consolas",
    "daisyui",
    "donot",
    "esbenp",
    "Fira",
    "HEXA",
    "Jetbrains",
    "liga",
    "Lilex",
    "Salamun",
    "signin",
    "signup",
    "Swal",
    "synthwave",
    "tabnine",
    "tailwindcss",
    "ures"
  ],

  "colorize.languages": [
    "javascript",
    "javascriptreact",
    "HTML5",
    "HTML",
    "CSS",
    "JSON",
    "JSONC"
  ],
  "colorize.colorized_colors": [
    "HEXA",
    "RGB",
    "HSL",
    "BROWSERS_COLORS",
    "ARGB"
  ],
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "files.watcherExclude": {
    "**/node_modules/*": true,
    "**/build/*": true,
    "**/dist/*": true
  },
  "console-ninja.featureSet": "Community",
  "react-native-tools.showUserTips": true,

  // "recommendations": [
