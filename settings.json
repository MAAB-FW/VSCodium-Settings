{
    /* <------------ General Settings ------------> */
    "editor.fontSize": 16,
    "editor.tabSize": 4,
    "files.autoSave": "afterDelay",
    "editor.wordWrap": "on",
    "editor.formatOnSave": true,
    "editor.minimap.autohide": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.bracketPairs": true,
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line",
    "editor.linkedEditing": false,
    // "editor.fontLigatures": true,
    "editor.fontLigatures": "'feat','ures','ss02','ss07','ss08'",
    "editor.stickyScroll.enabled": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                // the following elements will be in italic //
                "scope": [
                    "comment",
                    // "comment.block.html",
                    "keyword.control.import.js", // import
                    "keyword.control.export.js", // export
                    "keyword.control.from.js", // from
                    // "constant", // String, Number, Booleanâ€¦, this, super
                    "storage.modifier", // static keyword
                    "storage.type.class", // class keyword
                    "entity.other.attribute-name", // html attributes
                    "fenced_code.block.language.markdown" // markdown language modifier
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                // the following elements will be displayed in bold
                "scope": [
                    "entity.name.function.js",
                    "entity.name.type.class" // class names
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                // the following elements will be displayed in bold and italic
                "scope": [
                    "entity.other.attribute-name.html",
                    "storage.type.js",
                    "entity.name.section.markdown", // markdown headlines
                    "storage.type.function.js"
                ],
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                // the following elements will be excluded from italics
                "scope": [
                    //   (VSCode has some defaults for italics)
                    "invalid",
                    "keyword.operator",
                    "constant.numeric.css",
                    "keyword.other.unit.px.css",
                    "constant.numeric.decimal.js",
                    "constant.numeric.json",
                    "comment.block",
                    "entity.other.attribute-name.class.css",
                    "comment.block.js",
                    "comment.line.double-slash.js"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "editor.fontFamily": "MonoLisa, Fira Code iScript, Lilex, Fira Code, Jetbrains Mono, Operator Mono, Source Code Pro, Consolas, Courier New, Monospace, Cascadia Code",
    /* <------------ Formatter ------------> */
    "[html]": {
        // "editor.defaultFormatter": "vscode.html-language-features"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        // "editor.defaultFormatter": "vscode.css-language-features"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        // "editor.defaultFormatter": "vscode.typescript-language-features"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        // "editor.defaultFormatter": "vscode.typescript-language-features"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        // "editor.defaultFormatter": "vscode.json-language-features"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        // "editor.defaultFormatter": "vscode.json-language-features"
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    /* <------------ Workbench ------------> */
    "workbench.colorTheme": "codeSTACKr Theme",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "side",
    "workbench.list.smoothScrolling": true,
    // "workbench.colorCustomizations": {
    //     // "terminal.background": "#1D2021",
    //     "terminal.foreground": "#A89984",
    //     "terminalCursor.background": "#A89984",
    //     "terminalCursor.foreground": "#A89984",
    //     "terminal.ansiBlack": "#1D2021",
    //     "terminal.ansiBlue": "#0D6678",
    //     "terminal.ansiBrightBlack": "#665C54",
    //     "terminal.ansiBrightBlue": "#0D6678",
    //     "terminal.ansiBrightCyan": "#8BA59B",
    //     "terminal.ansiBrightGreen": "#95C085",
    //     "terminal.ansiBrightMagenta": "#8F4673",
    //     "terminal.ansiBrightRed": "#FB543F",
    //     "terminal.ansiBrightWhite": "#FDF4C1",
    //     "terminal.ansiBrightYellow": "#FAC03B",
    //     "terminal.ansiCyan": "#8BA59B",
    //     "terminal.ansiGreen": "#95C085",
    //     "terminal.ansiMagenta": "#8F4673",
    //     "terminal.ansiRed": "#FB543F",
    //     "terminal.ansiWhite": "#A89984",
    //     "terminal.ansiYellow": "#FAC03B"
    // },
    /* <------------ Terminal ------------> */
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.fontFamily": "MonoLisa, Jetbrains Mono, Fira Code, Lilex, Operator Mono, Source Code Pro, Consolas, Courier New, Monospace, Cascadia Code",
    /* <------------ Extensions ------------> */
    "prettier.bracketSameLine": true,
    "prettier.printWidth": 130,
    "prettier.tabWidth": 4,
    "prettier.semi": false,
    // "liveServer.settings.donotShowInfoMsg": true,
    // "tabnine.experimentalAutoImports": true,
    "cSpell.userWords": [
        "Alaikum",
        "autohide",
        "Cascadia",
        "Consolas",
        "daisyui",
        "donot",
        "esbenp",
        "Fira",
        "Jetbrains",
        "Lilex",
        "Salamun",
        "synthwave",
        "tabnine",
        "tailwindcss"
    ],
    "terminal.integrated.env.windows": {},
    "console-ninja.featureSet": "Community",
    "colorize.languages": ["javascript", "javascriptreact", "HTML5", "HTML", "CSS", "JSON", "JSONC"],
    "colorize.colorized_colors": ["HEXA", "RGB", "HSL", "BROWSERS_COLORS", "ARGB"],
}
