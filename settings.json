{
    /* <------------ General Settings ------------> */
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.minimap.autohide": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.minimap.renderCharacters": false,
    "editor.linkedEditing": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "editor.fontFamily": "Fira Code, Operator Mono, Source Code Pro, Consolas, Courier New, Monospace, Cascadia Code",
    /* <------------ Formatter ------------> */
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    /* <------------ Workbench ------------> */
    "workbench.colorTheme": "codeSTACKr Theme",
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    /* <------------ Terminal ------------> */
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "Fira Code, Operator Mono, Source Code Pro, Consolas, Courier New, Monospace, Cascadia Code",
    /* <------------ Extensions ------------> */
    "liveServer.settings.donotShowInfoMsg": true,
}